    script.
      $(document).ready(function(){
      $("#blogin").click(function(){
      var texto=$("#idlogin").val();
      var pass=$("#txtpass").val();
      var error1= $('<div title="Error Login"><p>No se especifico el nombre de usuario</p></div>');
      var error2= $('<div title="Error General"><p>No se pudo comunicar con el servidor</p></div>');
      if(texto==""){
      error1.dialog();}
      else{
      $.ajax({
      type: "GET",
      dataType: "application/json",
      url:"http://localhost:3000/",
      data:{"user":texto,"pass":pass},
      cache:'false',
      success:function(data,txtstatus,jqxhr){
      var json = $.parseJSON(data);
      alert(json.apellidos);
      },
      error:function( jqXHR, textStatus, errorThrown ) {
      error2.dialog();
      }
      });
      }
      });
      });
